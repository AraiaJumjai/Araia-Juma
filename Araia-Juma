  <script>
    const CONTENT={
      en:{
        AJD:`Born within a networked city, Araia hears the world as frequencies. She sculpts silence into rhythm, converts feeling into patterns.`,
        AJC:`A living interface: Araia moves through streams and stages alike, composing pulse-driven sets that fold audience emotion into sound.`,
        reviews:[
          {h:'Dr. M. Rael — Systems Architect',p:'"Her constructs integrate biological timing with digital orchestration."'},
          {h:'T. Yuen — Neural Interface Specialist',p:'"Human intent refined through algorithmic shaping — art and engineering in one."'},
          {h:'Dr. S. Oden — Cognitive Systems Analyst',p:'"Araia’s sessions produce signal signatures that are unpredictable yet coherent."'}
        ]
      },
      de:{
        AJD:`In einer vernetzten Metropole geboren, hört Araia die Welt als Frequenzen. Sie formt Stille zu Rhythmus und Gefühl zu Mustern.`,
        AJC:`Eine lebende Schnittstelle: Araia bewegt sich durch Streams und Bühnen, komponiert pulsegetriebene Sets voller Emotion.`,
        reviews:[
          {h:'Dr. M. Rael — Systemarchitekt',p:'„Ihre Konstrukte verbinden biologische Zeit mit digitaler Orchestrierung.“'},
          {h:'T. Yuen — Neural Interface Spezialist',p:'„Menschliche Absicht, verfeinert durch algorithmische Gestaltung.“'},
          {h:'Dr. S. Oden — Kognitive Systemanalyse',p:'„Araias Sessions erzeugen Signaturen, die unvorhersehbar und kohärent sind.“'}
        ]
      }
    };
    const body=document.body;
    let mode='AJD',lang='en';
    function render(){
      document.getElementById('blurb').textContent=CONTENT[lang][mode];
      const grid=document.getElementById('reviews-grid');
      grid.innerHTML='';
      CONTENT[lang].reviews.forEach(r=>{
        grid.innerHTML+=`<div class='review'><h5>${r.h}</h5><p>${r.p}</p></div>`;
      });
    }
    render();
    document.getElementById('btn-AJD').onclick=()=>{mode='AJD';render()};
    document.getElementById('btn-AJC').onclick=()=>{mode='AJC';render()};
    document.getElementById('lang-en').onclick=()=>{lang='en';render()};
    document.getElementById('lang-de').onclick=()=>{lang='de';render()};
  </script>
